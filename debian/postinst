#!/bin/sh
# postinst script for sample1
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    APPDIR=/apps/seafile
    SEAFILE_DATA=$APPDIR/config/seafile
    SEAHUB_DATA=$APPDIR/config/seahub
    SEAHUB_MEDIA=$APPDIR/seahub/media
    SEAHUB_DB=$SEAHUB_DIR/seahub.db
    SEAHUB_SQL=$APPDIR/seahub/sql/sqlite3.sql
    SEAHUB_SETTINGS=$APPDIR/config/seahub/django_settings.py
    SEAHUB_KEYGEN=$APPDIR/seahub/tools/secret_key_generator.py
    export LD_LIBRARY_PATH=$APPDIR/lib PATH=$PATH:$APPDIR/bin
    # Preserve config directory unless there is new config file
    [ -d $APPDIR/config ] || cp -a $APPDIR/default-config $APPDIR/config
    [ -d $APPDIR/config/ccnet ] || ccnet-init -c $APPDIR/config/ccnet --name "ReadyNAS" --port 10001 --host `hostname -f`
    [ -f $APPDIR/config/ccnet/seafile.ini ] || echo "${APPDIR}/config/seafile" > $APPDIR/config/ccnet/seafile.ini
    [ -f $SEAFILE_DATA/seafile.conf ] || seaf-server-init -d $SEAFILE_DATA
    [ -d $SEAFILE_DATA/library-template ] || mkdir -p $SEAFILE_DATA/library-template
    [ -f $SEAHUB_SETTINGS ] || echo "SECRET_KEY = \"$(python $SEAHUB_KEYGEN)\"" > $SEAHUB_SETTINGS
    [ -f $SEAHUB_DB ] || sqlite3 $SEAHUB_DB ".read $SEAHUB_SQL"
    [ -L $SEAHUB_MEDIA/avatars ] || mv $SEAHUB_MEDIA/avatars $SEAHUB_DATA/ && ln -s $SEAHUB_DATA/avatars $SEAHUB_MEDIA/avatars
    chown -R admin:admin $APPDIR
    systemctl daemon-reload && systemctl restart fvapp-seafile
    event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="seafile" success="1"/></add-s>' 0 0
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
